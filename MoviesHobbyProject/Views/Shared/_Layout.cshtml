@{
    string controller =
        ViewContext.RouteData.Values["controller"].ToString();
    string action =
        ViewContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Movies Hobby Project</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!--Movie Search API Scripts-->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha384-3ceskX3iaEnIogmQchP8opvBy3Mi7Ce34nWjpBIwVTHfGYWQS9jwHDVRnpKKHJg7"
            crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script language="JavaScript" type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="movieSearch.js"></script>
    @RenderSection("scripts", required: false)

</head>

<body>
    <!-- Axios script-->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
        <a class="navbar-brand" href="/">Group 3 Hobby Project</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link
                        @(controller == "Home" && action == "Index" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link
                        @(controller == "Home" && action == "AboutUs" ? "active" : "")"
                       asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link
                        @(controller == "Home" && action == "AboutOurProject" ? "active" : "")"
                       asp-controller="Home" asp-action="AboutOurProject">About Our Project</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link
                        @(controller == "Movies" && action == "ViewAll" ? "active" : "")"
                       asp-controller="Movies" asp-action="ViewAll">View All Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link
                        @(controller == "Movies" && action == "Add" ? "active" : "")"
                       asp-controller="Movies" asp-action="Add">Add a Movie</a>
                </li>
            </ul>
            <ul class="navbar-nav mr-3">
                <li class="nav-item">
                    <div class="dropdown show">
                        <a class="nav-link  dropdown-toggle ml-4" href="#" role="button" id="membersDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Group Members
                        </a>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" asp-controller="GroupMembers" asp-action="About" asp-route-id="2">Martin Dietal</a>
                            <a class="dropdown-item" asp-controller="GroupMembers" asp-action="About" asp-route-id="3">Saleem Dweik</a>
                            <a class="dropdown-item" asp-controller="GroupMembers" asp-action="About" asp-route-id="4">Danielle Maddux</a>
                            <a class="dropdown-item" asp-controller="GroupMembers" asp-action="About" asp-route-id="5">Vismaya Manchaiah</a>
                            <a class="dropdown-item" asp-controller="GroupMembers" asp-action="About" asp-route-id="1">Alainna Nichols</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </nav>




    @RenderBody()

</body>
</html>

