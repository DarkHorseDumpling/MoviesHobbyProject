@model MovieViewModel
<div class="jumbotron">
    <h1 class="text-center h3">@ViewBag.Title</h1>
</div>
<div class="p-5">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h5 class="col-3"><label asp-for="Movie.MovieName" class="col-form-label">Movie Name:</label></h5>
            <div class="col-9">
                <input type="text" class="form-control" id="MovieName" asp-for="Movie.MovieName">
            </div>
        </div>
        <div class="form-group row">
            <h5 class="col-3"><label asp-for="Movie.APIReferenceID" class="col-form-label">API Reference ID:</label></h5>
            <div class="col-9">
                <input type="text" class="form-control" id="APIReferenceID" asp-for="Movie.APIReferenceID">
            </div>
        </div>
        <input type="hidden" asp-for="Movie.SavedMoviesID" value="@ViewBag.AddID" />
        <button class="text-uppercase ml-2 btn btn-md btn-primary" type="submit">Submit</button>
        <a asp-controller="Home" asp-action="Index" class="text-uppercase ml-2 btn btn-md btn-warning">Cancel</a>
    </form>
</div>