@model HobbyViewModel

    <div class="jumbotron">
        <h1 class="text-center h3">@ViewBag.Title</h1>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-between">

            @foreach (SavedMovies m in Model.MoviesList)
            {

                <div class="cols-md-2 mb-3 p-2">
                    <div class="card card-body bg-light text-center">
                        <a class="btn btn-dark btn-outline-dark btn-rounded text-light" asp-area="" asp-controller="Movies" asp-action="MovieDetails" asp-route-slug="@m.Slug" asp-route-id="@m.SavedMoviesID">@m.MovieName</a>
                    </div>
                </div>

            }
        </div>

    </div>
